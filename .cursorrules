{
    "rules": {
        "python": {
            "enabled": true,
            "patterns": [
                "*.py",
                "*.ipynb"
            ],
            "settings": {
                "formatOnSave": true,
                "lintOnSave": true,
                "suggestions": true,
                "autoComplete": true,
                "typeChecking": true
            }
        },
        "jupyter": {
            "enabled": true,
            "patterns": [
                "*.ipynb"
            ],
            "settings": {
                "formatOnSave": true,
                "lintOnSave": true,
                "suggestions": true,
                "autoComplete": true,
                "kernelManagement": true,
                "variableInspector": true
            }
        },
        "documentation": {
            "enabled": true,
            "patterns": [
                "*.md",
                "*.txt",
                "*.rst"
            ],
            "settings": {
                "formatOnSave": true,
                "spellCheck": true
            }
        },
        "testing": {
            "enabled": true,
            "patterns": [
                "*_test.py",
                "test_*.py"
            ],
            "settings": {
                "formatOnSave": true,
                "lintOnSave": true,
                "pytest": true
            }
        }
    },
    "editor": {
        "tabSize": 4,
        "insertSpaces": true,
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true,
        "rulers": [88],
        "wordWrap": "off"
    },
    "search": {
        "exclude": [
            "**/__pycache__/**",
            "**/.ipynb_checkpoints/**",
            "**/.git/**",
            "**/build/**",
            "**/dist/**",
            "**/.venv/**",
            "**/venv/**",
            "**/.env/**"
        ]
    },
    "formatting": {
        "python": {
            "formatter": "black",
            "lineLength": 88,
            "quoteStyle": "double",
            "includeTrailingComma": true
        },
        "jupyter": {
            "formatter": "black",
            "lineLength": 88,
            "quoteStyle": "double",
            "includeTrailingComma": true
        }
    },
    "python": {
        "analysis": {
            "typeCheckingMode": "basic",
            "diagnosticMode": "workspace",
            "useLibraryCodeForTypes": true
        },
        "linting": {
            "enabled": true,
            "pylintEnabled": true,
            "flake8Enabled": true,
            "mypyEnabled": true
        },
        "formatting": {
            "provider": "black",
            "blackPath": "black"
        }
    }
} 